# Environment variables for the Autonomous Coding Agent
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: GitHub Token for creating PRs (needs repo access)
GITHUB_TOKEN=your_github_token_here

# Optional: GitLab Token if using GitLab repositories
GITLAB_TOKEN=your_gitlab_token_here

# Optional: Webhook secret for validating incoming webhooks
WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Trello callback URL for webhook validation
TRELLO_CALLBACK_URL=https://your-domain.com/webhook/trello

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Optional: Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://your-jira.atlassian.net,https://trello.com
