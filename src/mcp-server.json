{
  "mcpServers": {
    "github": {
      "command": "uvx",
      "args": ["mcp-server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "command": "uvx",
      "args": ["mcp-server-filesystem", "--path", "/tmp/claude-tasks"]
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "database": {
      "command": "uvx",
      "args": ["mcp-server-sqlite", "--db-path", "/var/lib/claude-tasks/tasks.db"]
    },
    "web": {
      "command": "uvx",
      "args": ["mcp-server-web"]
    }
  }
}